/**
 * Celcom Toolbar Options for Content Editor.
 */
function sysop_utility_toolbar() {
  $uid = \Drupal::currentUser()->id();
  $items['dashboard'] = [
    '#type' => 'toolbar_item',
    'tab' => [
      '#type' => 'link',
      '#title' => t('Dashboard'),
      '#url' => Url::fromRoute('sysop_utility.dashboard'),
      '#attributes' => [
        'title' => t('Celcom Toolbar Icon'),
        'class' => ['toolbar-icon', 'toolbar-celcom-icon'],
      ],
    ],
    '#weight' => 100,
    '#attached' => [
      'library' => [
        'sysop_utility/admin_pages',
      ],
    ],
  ];

  return $items;
}