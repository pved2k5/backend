/**
 * Implements hook_help().
 */
function sysop_utility_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the sysop_utility module.
    case 'help.page.sysop_utility':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Pluggable Fiels &amp; libraries') . '</p>';
      return $output;

    default:
  }
}


/**
 * Implements hook_theme().
 */
function sysop_utility_theme() {
  $theme = [];
  $theme['node__content_body'] = [
    'template' => 'node--content-body',
    'base hook' => 'node',
  ];
  return $theme;
}

/**
 * Implements hook_form_user_login_form_alter().
 */
function sysop_utility_form_user_login_form_alter(&$form, &$form_state, $form_id) {
    $form['actions']['submit']['#attributes']['class'][] = 'btn btn-primary';
    $form['name']['#title'] = t('Username');
    $form['pass']['#title'] = t('Password');
    $form['name']['#attributes']['placeholder']['name'] = t('Enter User name');
    $form['pass']['#attributes']['placeholder']['password'] = t('Enter Password');
    $form['#attached']['library'][] = 'sysop_utility/login_form';
    unset($form['links']);
}

